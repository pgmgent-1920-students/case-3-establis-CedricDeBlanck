<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title or site.title }} | {{ subdomain or site.subdomain }} | {{ domain or site.domain }}</title>
        <meta name="Description" content="{{ description or site.description }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
        <link rel="stylesheet" href="{{ '/static/css/main.css' | url }}">
    </head>
    <body> 
        <main class="wrapper wrapper--main {{ templateClass }}">
            {{ content | safe }}
        </main>
        <script src="{{ '/static/js/main.js' | url }}"></script>
    </body>
</html>